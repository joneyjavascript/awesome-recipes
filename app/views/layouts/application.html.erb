<!DOCTYPE html>
<html>
  <head>
    <title><%= t "layout.title" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <div class="row">
        <div class="col">
          <header id="layout-header">
            <h1>
              <%= link_to (t t "layout.title"), root_path, { class: "nav-link" } %>
            </h1>
            <p><strong><%= yield :title %></strong></p>
          </header>
        </div>
      </div>

      <div class="row">
        <div class="col">
            <nav class="navbar navbar-expand-lg navbar-light bg-light" id="layout-menu">
              <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>

              <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mr-auto">
                  <li class="nav-item active">
                    <%= link_to (t "layout.menu.home"), root_path, { class: "nav-link" } %>
                  </li>

                  <% if logged_in? %>
                    <li class="nav-item">
                      <%= link_to (t "layout.menu.recipes"), recipes_path, { class: "nav-link" } %>
                    </li>

                    <li class="nav-item">
                      <%= link_to "Minhas receitas", recipes_path, { class: "nav-link" } %>
                    </li>
                  <% else %>
                    <li class="nav-item">
                      <%= link_to (t "layout.menu.login"), new_session_path, { class: "nav-link" } %>
                    </li>
                  <% end %>
                </ul>

                <ul class="navbar-nav">
                  <% if logged_in? %>
                    <li class="nav-item">
                      <%= link_to "Sair", session_logout_path, { class: "nav-link" } %>
                    </li>
                  <% end %>
                </ul>
              </div>
            </nav>
        </div>
      </div>

      <div class="row">
        <div class="col">
          <section class="content" id="layout-content">
            <section class="flash-messages">
              <% flash.each do |type, msg| %>
                <div class="alert alert-<%= type %>">
                  <%= msg %>
                </div>
              <% end %>
            </section>

            <%= yield %>
          </section>
        </div>
      </div>
    </div>
  </body>
</html>

<% console %>
