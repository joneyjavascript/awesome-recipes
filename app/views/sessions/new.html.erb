<% content_for :title do %>
  <%= t "pages.login.subtitle" %>
<% end %>

<section class="page-block page-block-center login-form-container">
    <h2>Login</h2>
    <%= form_with url: sessions_path, method: :post do |form| %>

      <div class="form-group">
        <%= form.label :email, "E-mail:" %>
        <%= form.text_field :email, { class: "form-control", placeholder: "Enter email" } %>
        <small class="form-text text-muted">Informe seu e-mail cadastrado</small>
      </div>

       <div class="form-group">
        <%= form.label :password, "Password:" %>
        <%= form.password_field :password, { class: "form-control", placeholder: "Password" } %>
        <small class="form-text text-muted">Informe sua senha informada no cadastro</small>
      </div>

      <%= form.submit "Entrar", { class: "btn btn-primary" } %>
    <% end %>
</section>
